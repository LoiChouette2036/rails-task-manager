<h1>My tasks</h1>

<div class="d-flex flex-column gap-2 checkbox-list">
    <% @tasks.each do |task| %>
        <div class="d-flex align-items-center gap-2">
        <% if task.completed %>
            <i class="fa-regular fa-square-check"></i>
        <% else %>
            <i class="fa-regular fa-square"></i>
        <% end %>
        <%=link_to task.title, task_path(task), class: "text-reset text-decoration-none" %>
        </div>
    <% end %>
</div>

<%=link_to "Create new Task", new_path%>

